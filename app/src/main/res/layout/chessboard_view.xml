<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintDimensionRatio="1:1" android:background="@color/appBackground">

    <ImageView
            android:src="@drawable/board"
            android:id="@+id/chessboardBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            tools:ignore="MissingConstraints"
    />
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chessboardProgressBar"
            tools:layout_editor_absoluteY="342dp" tools:layout_editor_absoluteX="178dp"/>
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/chessboardTable"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="24dp">
    </TableLayout>

    <!--TableLayout         android:stretchColumns="*"-->


</androidx.constraintlayout.widget.ConstraintLayout>